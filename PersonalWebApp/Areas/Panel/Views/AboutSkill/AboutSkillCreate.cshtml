@model AboutSkill

@{
    ViewBag.Title = "Skill Create";
}

<div class="m-content">

    <div class="row">
        <div class="col-md-12">


            <!--begin::Portlet-->
            <div class="m-portlet">
                <!--begin::Form-->
                <form class="m-form" asp-action="create" method="post">
                    <div class="m-portlet__foot m-portlet__foot--top m-portlet__foot--fit">
                        <div class="m-form__actions m-form__actions--solid">
                            <div class="row align-items-center">
                                <div class="col m--align-left m--valign-middle">
                                    <h3 class="m-subheader__title ">@ViewBag.Title</h3>
                                </div>
                                <div class="col m--align-right">
                                    <button type="submit" class="btn btn-primary">Create</button>
                                    <a asp-action="index" class="btn btn-secondary">Cancel</a>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-portlet__body">
                        <div class="form-group m-form__group">
                            <label asp-for="@Model.Name"></label>
                            <input asp-for="@Model.Name" class="form-control m-input">
                            <span class="m-form__help text-danger" asp-validation-for="@Model.Name"></span>
                        </div>
                        <div class="form-group m-form__group">
                            <label asp-for="@Model.Color" for="example-color-input" class="col-2 col-form-label">Color</label>
                            <input asp-for="@Model.Color" class="form-control m-input" type="color">
                        </div>
                        <div class="form-group m-form__group">
                            <label asp-for="@Model.Icon"></label>
                            <input asp-for="@Model.Icon" class="form-control m-input">
                            <span class="m-form__help text-danger" asp-validation-for="@Model.Icon"></span>
                        </div>
                    </div>

                </form>

                <!--end::Form-->
            </div>

            <!--end::Portlet-->

        </div>
    </div>
</div>

@section Scripts {
}