                    <div class="row">
                        <div class="col-md-10 col-md-offset-1 col-md-pull-1 animate-box" data-animate-effect="fadeInRight">
                            <form asp-action="saveRequest" method="post">
                                <div class="form-group">
                                    <input asp-for="ContactRequest.Name" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.ContactRequest.Name)">
                                </div>
                                <div class="form-group">
                                    <input asp-for="ContactRequest.Email" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.ContactRequest.Email)">
                                </div>
                                <div class="form-group">
                                    <input asp-for="ContactRequest.Subject" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.ContactRequest.Subject)">
                                </div>
                                <div class="form-group">
                                    <textarea style="resize:none" asp-for="ContactRequest.Message" cols="30" rows="7" class="form-control" placeholder="@Html.DisplayNameFor(m=>m.ContactRequest.Message)"></textarea>
                                </div>
                                <div class="form-group">
                                    <input type="submit" class="btn btn-primary btn-send-message" value="Send Message">
                                </div>
                            </form>
